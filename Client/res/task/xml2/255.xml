  				<Trigger>
					<Item Type="NPC_OPTION" MapID="11805" ObjID="11808" TaskOption="族长，有什么事？" />
				</Trigger>
				<Action Type="TALK">
					<Msg NpcID="74" ImageID="1" Info="感谢你对我们精灵族的帮助，我们无以为报！" />
					<Option Info="这是我应该做的！" />
